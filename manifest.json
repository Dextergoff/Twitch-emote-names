{
  "manifest_version": 3,
  "name": "TTV tools",
  "description": "tools for twitch.tv",
  "version": "1.0",
  "action": {
    "default_icon": "smile.png"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.twitch.tv/"
  ]
}